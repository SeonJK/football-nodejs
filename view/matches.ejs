<!-- matches.ejs -->

<html>
    <head>
        <title><%= title %></title>
        <meta charset = "utf-8">
    </head>
    <body>
            <a href="/">
                <input type="button" value="선수단">
            </a>
            &nbsp;
            <a href="record">
                <input type="button" value="기록실">
            </a>
            <br/><br/>
        <h1>경기 정보</h1>
        <table border="2">
                <tr>
                    <th>상대팀</th>
                    <th>날짜</th>
                    <th>득점</th>
                    <th>실점</th>
                    <th>장소</th>
                    <th>승/패 여부</th>
                </tr>
                <%
                for(var i = 0; i<rows.length; i++)
                {
                %>
                <tr>
                    <td><%= rows[i].name %></td>
                    <td><%= moment(rows[i].date).format(
                        'YYYY[-]MM-DD HH:mm') 
                        %>
                    </td>
                    <td><%= rows[i].score %></td>
                    <td><%= rows[i].lose %></td>
                    <td>
                        <% if(rows[i].place == 'NULL'){
                            var stadium = '미정';
                        }else{
                            var stadium = rows[i]. place;
                        }
                        %>
                        <%= stadium %>
                    </td>
                    
                    <td>
                        <%
                        var result; 
                        if(rows[i].win == 0){
                            result = '승';
                        }else if(rows[i].win == 1){
                            result = '무';
                        }else if(rows[i].win == 2){
                            result = '패';
                        }else if(rows[i].win == '3'){
                            result = '';
                        }
                        %>
                        <%= result %>
                    </td>
                </tr>
                <%
                }
                %>
        </table>

        <br/>
        <a href="create_match">
            <input type="button" value="경기 추가">
        </a>
    </body>
</html>